{
  "name": "solfame-backend",
  "version": "1.0.0",
  "description": "AI-powered music transcription tool for choir education",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:audio\"",
    "dev:web": "npm run dev --workspace=@solfame/web",
    "dev:audio": "npm run dev --workspace=@solfame/audio-service",
    "build": "npm run build --workspaces",
    "build:web": "npm run build --workspace=@solfame/web",
    "build:audio": "npm run build --workspace=@solfame/audio-service",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "npm run typecheck --workspaces",
    "test": "npm run test --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "postinstall": "npm run build --workspace=@solfame/shared"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "FAIYATech",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Faithful1/solfame-backend.git"
  }
}
